<div class="row">
    <div class="col-md-6 m-auto">
        <div class="card card-body">
            <h1 class="text-center mt-3">Login</h1>
            <form action="/users/login" method="POST">
                <div class="form-group my-3">
                    <label for="email">Email</label>
                    <input type="email" id="email" name="email" placeholder="Enter email" class="form-control" required>
                </div>
                <div class="form-group my-3">
                    <label for="password">Password</label>
                    <input type="password" id="password" name="password" placeholder="Enter password"
                        class="form-control" required>
                </div>
                <div class="d-flex justify-content-between">
                    <button type="submit" class="btn btn-primary btn-block mt-2" style="width: 150px">Login</button>
                    <a href="/auth/facebook" class="btn btn-info btn-block mt-2" style="width: 150px">Facebook Login</a>
                </div>
            </form>
            <p class="lead mt-4">
                Not Account? <a href="/users/register" class="text-decoration-none">Register</a>
            </p>
            </form>
        </div>
    </div>
</div>