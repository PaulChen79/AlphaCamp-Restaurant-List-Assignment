<!-- search bar -->
<div class="container search-bar">
  <div class="search-bar-outer">
    <div class="search-bar-inner">
      <h4 class="mb-2">尋找餐廳：</h4>
      <form action="/search">
        <div class="d-flex align-items-sm-center">
          <div class="input-group">
            <input type="text" name="keyword" class="form-control" placeholder="輸入餐廳、分類" aria-label="Restaurant Name..."
              value="{{keyword}}" aria-describedby="search-button">
            <div class="input-group-append">
              <button class="btn btn-major" type="submit" id="search-button"><i class="fas fa-search"></i></button>
            </div>
          </div>
          <div class="dropdown ml-5 w-25">
            <button type="button" class="btn btn-outline-dark dropdown-toggle" id="sort" data-toggle="dropdown"
              aria-haspopup="true" aria-expanded="false" data-offset="10,20">
              Sort
            </button>
            <div class="dropdown-menu" aria-labelledby="sort">
              <a class="dropdown-item" href="{{#if keyword}}/search/?keyword={{keyword}}&{{else}}?{{/if}}sort=name">A - Z</a>
              <a class="dropdown-item" href="{{#if keyword}}/search/?keyword={{keyword}}&{{else}}?{{/if}}sort=-name">Z - A</a>
              <a class="dropdown-item" href="{{#if keyword}}/search/?keyword={{keyword}}&{{else}}?{{/if}}sort=category">類別</a>
              <a class="dropdown-item" href="{{#if keyword}}/search/?keyword={{keyword}}&{{else}}?{{/if}}sort=rating">評分 (低到高)</a>
              <a class="dropdown-item" href="{{#if keyword}}/search/?keyword={{keyword}}&{{else}}?{{/if}}sort=-rating">評分 (高到低)</a>
              <a class="dropdown-item" href="{{#if keyword}}/search/?keyword={{keyword}}&{{else}}?{{/if}}sort=location">地點</a>
            </div>
          </div>
        </div>
      </form>
    </div>
  </div>


  <!-- restaurant list -->
  <div class="container mt-5">
    <div class="row">
      <div class="col-md-10 col-12 mx-auto">
        <div class="card-columns">
          {{#each restaurant}}
          <a href='/restaurants/{{this._id}}' class="text-secondary">
            <div class="card mb-3">
              <img class="card-img-top" src="{{this.image}}" alt="{{this.name}}">
              <div class="card-body p-3">
                <h6 class="card-title mb-1">{{this.name}}</h6>

                <div class="restaurant-category mb-1">
                  <i class="fas fa-utensils pr-2"></i> {{this.category}}
                </div>

                <span class="badge badge-pill badge-danger font-weight-normal mb-2">
                  {{this.rating}}
                  <i class="fas fa-star fa-xs"></i>
                </span>
                <div class="text-right m-2">
                  <a href="/restaurants/{{this._id}}" class="text-decoration-none mx-2">詳細</a>
                  <a href="/restaurants/{{this._id}}/edit" class="text-decoration-none mx-2">編輯</a>
                  <form action="/restaurants/{{ this._id }}?_method=DELETE" method="POST" class="d-inline-block">
                    <button type="submit" class="btn btn-danger">刪除</button>
                  </form>
                </div>
              </div>
            </div>
          </a>
          {{/each}}
        </div>
      </div>
    </div>
  </div>